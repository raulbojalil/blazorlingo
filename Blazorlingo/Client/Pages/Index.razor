@page "/"
@using Blazorlingo.Shared;
@inject HttpClient Http


<div class="min-h-screen md:flex">
    <div class="flex-none w-full md:max-w-xs bg-blue-600 text-gray-300">
        <LangNav OnLanguageSelected="async (course) => { await sessionViewer.LoadCourse(course); }"></LangNav>
    </div>
    <div class="flex flex-col items-center justify-center w-full bg-gray-200">
        <SessionViewer @ref="sessionViewer"></SessionViewer>
    </div>
</div>

 @code {

     private SessionViewer sessionViewer;

 }